<h1> Edit a song </h1>
<form method="POST" action="/songs/<%=@song.slug %>">
<input id="hidden" type="hidden" name="_method" value="patch">

<label for="song_name">Name:</label>
<input type="text" name="song[name]" id="name" value="<%= @song.name %>"><br><br>

<label for="artist_name">Artist Name:</label>
<input type="text" name="artist[name]" id="artist_name" value="<%= @song.artist.name %>"> <br>
<br>

<label>Genre:</label>
<br><% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%='checked' if @song.genre_ids.include?(genre.id) %>> <%= genre.name %> <br>
  <% end %> 
  <br>
<input type="submit" value="Save">
</form>

