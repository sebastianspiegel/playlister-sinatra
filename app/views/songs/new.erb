<h1> Add a new song </h1>
<form method="POST" action="/songs">
<label for="song_name">Name:</label>
<input type="text" name="song[name]" id="name"><br><br>

<label for="artist_name">Artist Name:</label>
<input type="text" name="artist[name]" id="artist_name"> <br>
<br>

<label>Genre:</label>
<br><% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"> <%= genre.name %> <br>
  <% end %> 
  <br>
<input type="submit" value="Create">
</form>

